<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <div class="input-group">
    <label class="input-group-addon" for="message_name">名前</label>
    <input maxlength="10" class="form-control" size="10" type="text" name="message[name]" id="message_name" />
  </div>

  <div class="input-group">
    <label class="input-group-addon" for="message_body">内容</label>
    <textarea maxlength="50" class="form-control" name="message[body]" id="message_body">
</textarea>
  </div>

  <div class="btn-group">
    <input type="submit" name="commit" value="Submit" class="btn btn-sm btn-success" />
  </div>
<% end %>